<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/blanco"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="murgiproject.www.iesmurgi.org.murgiprojectv2.VerCategoriasCursos">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sele_bachi"
        android:id="@+id/btn_irBachillerato"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="80dp"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:elevation="20dp"
        tools:targetApi="lollipop" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sele_fpbasica"
        android:id="@+id/btn_irFpBasico"
        android:layout_marginBottom="80dp"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:elevation="20dp"
        tools:targetApi="lollipop"
        />



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sele_fpmedio"
        android:id="@+id/btn_irGradoMedio"
        android:layout_marginBottom="80dp"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:elevation="20dp"
        tools:targetApi="lollipop"
        />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sele_fpsuperior"
        android:id="@+id/btn_irGradoSuperior"
        android:layout_marginBottom="80dp"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:elevation="20dp"
        tools:targetApi="lollipop" />



</LinearLayout>
</ScrollView>